<div class="photo-list">
  <form class="photo-body" method='post' enctype='multipart/form-data'>
    <div class="form-item"><strong>设置相片路径：</strong></div>
    <div class="form-item">
      标题 <input type="text" name="title" value="<%=post.title%>"/>
    </div>
    <div class="form-item">
      描述 <textarea name="description"><%=post.description%></textarea>
    </div>
    <!--<div class="form-item">-->
    <!--原图地址 <input type="text" class="photo-url" name="raw_url" value="<%=post.raw_url%>"/>-->
    <!--<div class="preview-raw">-->
    <!--<img src="<%=post.raw_url%>"/>-->
    <!--</div>-->
    <!--</div>-->
    <div class="form-item">
      缩略图地址 <input type="text" class="photo-url" name="preview_url" value="<%=post.preview_url%>"/>
      <div class="preview-small">
        <img src="<%=post.preview_url%>"/>
      </div>
    </div>
    <div class="form-item">
      附件 <input type="file" name="thumbnail"/>
    </div>
    <input type="hidden" name="post_id" value="<%=post.post_id%>"/>
    <input type="submit" value="保存" class="form-save"/>
  </form>
</div>
